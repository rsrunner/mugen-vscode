{
    "name": "mugen-vscode",
    "displayName": "MUGEN",
    "description": "VSCode support for MUGEN, a fighting game engine",
    "version": "2.0.5",
    "license": "GPLv3",
    "repository": "https://github.com/wily-coyote/mugen-vscode",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "cns",
                "aliases": [
                    "CNS",
                    "cns"
                ],
                "extensions": [
                    ".cmd",
                    ".def",
                    ".cns",
                    ".st"
                ],
                "configuration": "./languages/cns.json"
            },
            {
                "id": "air",
                "aliases": [
                    "AIR",
                    "air"
                ],
                "extensions": [
                    ".air"
                ],
                "configuration": "./languages/cns.json"
            },
            {
                "id": "zss",
                "aliases": [
                    "ZSS",
                    "zss"
                ],
                "extensions": [
                    ".zss"
                ],
                "configuration": "./languages/zss.json"
            }
        ],
        "grammars": [
            {
                "language": "cns",
                "scopeName": "source.cns",
                "path": "./syntaxes/cns.tmLanguage.json"
            },
            {
                "language": "air",
                "scopeName": "source.air",
                "path": "./syntaxes/air.tmLanguage.json"
            },
            {
                "language": "zss",
                "scopeName": "source.zss",
                "path": "./syntaxes/zss.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "mugen-vscode.runMugen",
                "title": "Run MUGEN",
                "when": "resourceExtname in mugen-vscode.supportedFiles",
                "args": {
                    "player1": "",
                    "player2": "",
                    "stage": ""
                }
            },
            {
                "command": "mugen-vscode.runMugenCvk",
                "title": "Run MUGEN - Current vs KFM",
                "when": "resourceExtname in mugen-vscode.supportedFiles"
            },
            {
                "command": "mugen-vscode.runMugenKvc",
                "title": "Run MUGEN - KFM vs current",
                "when": "resourceExtname in mugen-vscode.supportedFiles"
            },
            {
                "command": "mugen-vscode.runSprmake2",
                "title": "Run sprmake2",
                "when": "resourceExtname in mugen-vscode.supportedFiles"
            },
            {
                "command": "mugen-vscode.runSndmaker",
                "title": "Run sndmaker"
            },
            {
                "command": "mugen-vscode.normalizeSelection",
                "title": "Normalize Selection"
            },
            {
                "command": "mugen-vscode.normalizeAll",
                "title": "Normalize Document"
            }
        ],
        "configuration": {
            "title": "MUGEN",
            "properties": {
                "mugen.gamePath": {
                    "type": "string",
                    "default": "",
                    "description": "Absolute path to MUGEN game executable. Also used to find sprmake2 and sndmaker."
                },
                "mugen.kungFuman": {
                    "type": "string",
                    "default": "",
                    "description": "Absolute path to Kung Fu Man's DEF file."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@types/semver": "^7.5.8"
    }
}
